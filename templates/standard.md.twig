{#
This templates expects 3 arrays :
- newPackages array of Package
- updatedPackages array of UpdatedPackage
- deletedPackages array of Package
#}

{% if newPackages %}
### New Packages

|package|version added|
|----|----|
{% for package in newPackages %}
{% include 'part/version-line.md.twig' with {'package':package} %}
{% endfor %}

{% endif %}

{% if updatedPackages %}
### Updated Packages

|package release|version diff|
|----|----|
{% for updatedPackage in updatedPackages %}
{% include 'part/diff-line.md.twig' with {'updatedPackage':updatedPackage} %}
{% endfor %}

{% endif %}

{% if deletedPackages %}
### Deleted Packages

|package|version removed|
|----|----|
{% for package in deletedPackages %}
{% include 'part/version-line.md.twig' with {'package':package} %}
{% endfor %}

{% endif %}
